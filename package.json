{
  "name": "devkit",
  "private": true,
  "workspaces": [
    "@reactorx/*",
    "@querycap/*",
    "@querycap-ui/*",
    "@querycap-dev/*"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "release": "lerna version --conventional-commits",
    "ncu": "lerna exec -- ncu -u",
    "clean": "rm -rf @querycap*/*/node_modules",
    "fmt": "prettier --write @querycap*/{,**/}{,**/}*.{ts,tsx,json,md}",
    "test": "jest --coverage",
    "build": "lerna exec monobundle",
    "start": "devkit dev sg",
    "pkg": "devkit build --prod sg",
    "prepare": "yarn test && yarn build"
  },
  "devkit": {
    "dev": "webpack-browser-sync --config webpack.config.ts --historyApiFallback --index=../index.html",
    "build": "webpack --config webpack.config.ts"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@reactorx/([^/]+)$": "<rootDir>/@reactorx/$1/index.ts",
      "^@querycap-dev/([^/]+)$": "<rootDir>/@querycap-dev/$1/index.ts",
      "^@querycap/([^/]+)$": "<rootDir>/@querycap/$1/index.ts",
      "^@querycap-ui/([^/]+)$": "<rootDir>/@querycap-ui/$1/index.ts"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "husky": {
    "hooks": {
      "post-merge": "yarn",
      "pre-commit": "lint-staged && pretty-quick --staged && yarn && git add yarn.lock",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --quiet"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "arrowParens": "always",
    "printWidth": 120,
    "jsxBracketSameLine": true
  },
  "eslintConfig": {
    "extends": [
      "@querycap-dev/eslint-config"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/ban-ts-comment": "off",
      "func-style": "off",
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "react/prop-types": "off"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/runtime-corejs3": "^7.11.2",
    "@babel/types": "^7.11.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/react": "^11.0.4",
    "@types/babel-plugin-macros": "^2.8.3",
    "@types/babel__preset-env": "^7.9.1",
    "@types/benchmark": "^1.0.33",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.11.2",
    "@types/prismjs": "^1.16.1",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "axios": "^0.20.0",
    "babel-jest": "^26.3.0",
    "benchmark": "2.1.4",
    "date-fns": "^2.16.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0",
    "localforage-memoryStorageDriver": "0.9.2",
    "lodash": "^4.17.20",
    "lodash-es": "4.17.15",
    "path-browserify": "^1.0.1",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "prismjs": "1.21.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rxjs": "^6.6.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "5.0.0-rc.0",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12"
  }
}
